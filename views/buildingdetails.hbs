    <div class="form">


        <div id="login">
            <h1>Welcome Admin!
                <br> Fillup your Building Details</h1>

            <form action="/admin.buildingdetails" method="post">

                <div class="field-wrap">
                    <label>
                        Building Apartment Name:
                        <span class="req">*</span>
                    </label>
                    <input type="text" required autocomplete="off" name="buildingname" />

                </div>


                <div class="field-wrap">
                    <label>
                        Address
                        <span class="req">*</span>
                    </label>
                    <input type="text" required autocomplete="off" name="Address" />
                </div>
                <div class="field-wrap">
                    <h3 style="color:white">City:&nbsp;&nbsp;&nbsp;
                        <select name="city">
                            <option value="Indore">Indore</option>
                            <option value="ujjain">ujjain</option>
                            <option value="Bhopal">Bhopal</option>
                            <option value="Mhow">Mhow</option>
                        </select>&nbsp;&nbsp;&nbsp; 
                        State:&nbsp;&nbsp;&nbsp;
                        <select name="state">
                            <option value="MadhyaPradesh">MadhyaPradesh</option>
                            <option value="Rajisthan">Rajisthan</option>
                            <option value="U.P">U.P</option>
                            <option value="Maharastra">Maharastra</option>
                        </select>

                </div>


                <p class="forgot">
                    <a href="/admin.inviteUser">Skip>>>>>>></a>
                </p>

                <button type="submit" class="button button-block" />Save</button>

            </form>

        </div>
        <!--login form Ended -->


    </div>
    <!--form ended-->

