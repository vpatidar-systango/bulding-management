    <div class="form">
        <div id="signup">
            <h1>Profile Page </h1>
            <form action="/superAdmin.updateSProfile" method="post">
                <h4>
                    <center>
                        <span id="cp"> {{msg}}</span>
                    </center>
                </h4>
                <br>
                <br>

                <div class="top-row">
                    <div class="field-wrap">
                        <h3>
                            <p style="color:white">Firstname</p>
                        </h3>
                        <input type="text" required autocomplete="off" name="username" value={{user.username}} />

                    </div>

                    <div class="field-wrap">
                        <h3>
                            <p style="color:white">Lastname</p>
                        </h3>

                        <input type="text" required autocomplete="off" name="lastname" value={{user.lastname}} />
                    </div>
                </div>

                <div class="field-wrap">
                    <h3>
                        <p style="color:white">Email</p>
                    </h3>
                    <input type="email" required autocomplete="off" name="email" value={{user.email}} />
                </div>

                <div class="field-wrap">
                    <h3>
                        <p style="color:white">UserType</p>
                    </h3>
                    <input type="text" required autocomplete="off" name="email" disabled value={{user.role}} />
                </div>

                {{!--
                <div class="field-wrap">
                    <h3>
                        <p style="color:white">Password</p>
                    </h3>
                    <input type="password" required autocomplete="off" name="password" value={{user.password}} />
                </div> --}}

                <button type="submit" class="button button-block" />Update Profile</button>

            </form>

        </div>
        <!--Signup form Ended -->


    </div>
    <!--form ended-->

    <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    <script src="js/index.js"></script>

</body>

</html>